<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.AddProjectPage"
             Visual="Material">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Entry x:Name="projectNameEntry" Placeholder="Имя проекта"/>
                <Editor x:Name="projectDescEntry" Placeholder="Описание"/>
                <Entry x:Name="phoneEntry" Placeholder="Телефон №1"/>
                <Entry x:Name="emailEntry" Placeholder="E-mail"/>
                <Entry x:Name="addressEntry" Placeholder="Адрес"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnCancel" Text="Отмена" Clicked="btnCancel_Clicked"/>
                <Button x:Name="btnAdd" Text="Добавить" Clicked="btnAdd_Clicked"/>
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>