<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.ProjectsPage"
             Visual="Material">
    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" Clicked="AddProjectClicked">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="Material"
					Glyph="&#xe145;" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>

        <StackLayout>
            <ListView x:Name="lwProjects" ItemsSource="{Binding Projects}" ItemSelected="lwProjectsItemSelected"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
